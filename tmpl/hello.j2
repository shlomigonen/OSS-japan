apiVersion: v1
kind: Namespace
metadata:
  name: demo
---  
apiVersion: apps/v1
kind: Deployment
metadata:
  name: helloservice
  namespace: demo
spec:
  selector:
    matchLabels:
      app: helloservice
  template:
    metadata:
      labels:
        app: helloservice
    spec:
      terminationGracePeriodSeconds: 5
      containers:
      - name: server
        image: shlomigonen/ossjapan:{{ image_deploy_tag }}
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        env:
        - name: PORT
          value: "8080"
---
apiVersion: v1
kind: Service
metadata:
  name: helloservice
  namespace: demo
spec:
  selector:
    app: helloservice
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: 8080
  type: NodePort

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: demo-app-ingress
  namespace: demo
spec:
  rules:
  - host: novifex.com
    http:
      paths:
      - backend:
          service:
            name: helloservice
            port:
              number: 80
        path: /
        pathType: Prefix
      
